@model IEnumerable<MVCUI.ViewModels.Account.UserViewModel>

@{
    ViewBag.Title = "Users";
}
<h2>All users</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Profile", "Account", new { name = item.Name }, new { @class = "w3-text-cyan" })
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.Role.Name)
                </td>
            </tr>
        }
    </tbody>
</table>